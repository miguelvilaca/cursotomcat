    <resource-ref>
        <res-ref-name>jdbc/ContatosLocal</res-ref-name>
        <res-ref-type>javax.sql.DataSource</res-ref-type>
        <res-auth>Container</res-auth> 
    </resource-ref>
    -->
    
</web-app>
